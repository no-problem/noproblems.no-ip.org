<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="noproblem.oauth.user_provider.class">Noproblem\AnyAuthBundle\Security\User\OAuthUserProvider</parameter>
        <parameter key="noproblem.oauth.user_entity.class">Noproblem\AnyAuthBundle\Entity\OAuthUser</parameter>
    </parameters>

    <services>
        <service id="noproblem.oauth.user_provider" class="%noproblem.oauth.user_provider.class%">
            <argument type="service" id="doctrine" />
            <argument>%noproblem.oauth.user_entity.class%</argument>
            <argument type="collection" />
        </service>
    </services>
</container>
